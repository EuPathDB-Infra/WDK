{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "plugins": [ "react" ],

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  
  "extends": "eslint:recommended",

  "rules": {
    "quotes": 0,
    "camelcase": 0,
    "no-underscore-dangle": 0,
    "require-jsdoc": [2, {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": false,
        "ClassDeclaration": true
      }
    }]
  }
}
