    },
    "summary": {
      "type": "string"
    },
    "summaryViewPlugins": {
      "description": "TODO: Determine possible values to make this more strict.",
      "$ref": "/schema/includes/string-array.json"
    },
    "urlSegment": {
      "type": "string"
    }
  },
  "required": [
    "description",
    "defaultAttributes",
    "defaultSummaryView",
    "displayName",
    "dynamicAttributes",
    "groups",
    "name",
    "parameters",
    "properties",
    "recordClassName",
    "shortDisplayName",
    "stepAnalysisPlugins",
    "summary",
    "summaryViewPlugins",
    "urlSegment"
  ]
