        "required": [
          "displayName",
          "formats",
          "isDisplayable",
          "isInReport",
          "isRemovable",
          "isSortable",
          "name",
          "properties",
          "truncateTo"
        ]
      }
    },
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "description": {
            "type": "string"
          },
          "displayName": {
            "type": "string"
          },
          "displayType": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "isVisible": {
            "type": "boolean"
          },
          "parameters": {
            "oneOf": [
              {
                "$ref": "/schema/includes/string-array.json"
              }
            ]
          }
        },
        "required": [
          "description",
          "displayName",
          "displayType",
          "name",
          "isVisible"
        ]
      }
    },
    "name": {
      "type": "string"
    },
    "parameters": {
      "oneOf": [
        {
          "$ref": "/schema/includes/string-array.json"
        },
        {
          "type": "array",
          "items": [
            {
              "$ref": "includes/answer-param.json"
            },
            {
              "$ref": "includes/enum-param.json"
            },
            {
              "$ref": "includes/string-param.json"
            }
          ]
        }
      ]
