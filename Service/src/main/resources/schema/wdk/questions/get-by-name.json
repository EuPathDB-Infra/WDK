    "description": {
      "type": "string"
    },
    "displayName": {
      "type": "string"
    },
    "dynamicAttributes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "align": {
            "type": "string",
            "enum": [
              "center"
            ]
          },
          "displayName": {
            "type": "string"
          },
          "formats": {
            "type": "array"
          },
          "help": {
