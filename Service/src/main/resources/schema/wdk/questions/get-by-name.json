          },
          "isDisplayable": {
            "type": "boolean"
          },
          "isInReport": {
            "type": "boolean"
          },
          "isRemovable": {
            "type": "boolean"
          },
          "isSortable": {
            "type": "boolean"
          },
          "name": {
            "type": "string"
          },
          "properties": {
            "$ref": "#/definitions/properties"
          },
          "truncateTo": {
            "type": "integer"
          }
