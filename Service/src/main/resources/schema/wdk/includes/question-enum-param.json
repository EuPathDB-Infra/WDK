{
  "$schema": "http://json-schema.org/draft-04/schema",
  "additionalProperties": false,
  "allOf": [
    { "$ref": "question-base-param.json"},
    {
      "type": "object",
      "properties": {
        "countOnlyLeaves": {
          "type": "boolean"
        },
        "defaultValue": {
          "type": "string"
        },
        "depthExpanded": {
          "type": "integer"
        },
        "displayType": {
          "type": "string",
          "enum": [
            "select"
          ]
        },
        "maxSelectedCount": {
          "type": "integer"
        },
        "minSelectedCount": {
          "type": "integer"
        },
        "multiPick": {
          "type": "boolean"
        },
        "type": {
          "type": "string",
          "enum": [
            "EnumParam"
          ]
        },
        "vocabulary": {
          "type": "array",
          "items": {
            "type": "array",
            "items": [
              { "type": "string" },
              { "type": "null" }
            ],
            "maxItems": 3,
            "minItems": 3
          }
        }
      },
      "required": [
        "countOnlyLeaves",
        "defaultValue",
        "depthExpanded",
        "displayType",
        "maxSelectedCount",
        "minSelectedCount",
        "multiPick",
        "type",
        "vocabulary"
      ]
    }
  ]
}
