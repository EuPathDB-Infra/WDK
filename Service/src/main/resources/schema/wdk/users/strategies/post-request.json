{
  "$schema": "http://json-schema.org/draft-04/schema",
  "oneOf": [
    {
      "type": "object",
      "description": "Strategy copy request",
      "properties": {
        "sourceStrategySignature": {
          "description": "signature of the source strategy to copy",
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "sourceStrategySignature"
      ]
    },
    {
      "type": "object",
      "description": "New strategy request",
      "properties": {
        "description": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "savedName": {
          "type": "string"
        },
        "isSaved": {
          "type": "boolean"
        },
        "isPublic": {
          "type": "boolean"
        },
        "stepTree": {
	  "$ref": "../../includes/step-tree.json"
        }
      },
      "additionalProperties": false,
      "required": [
          "name",
	  "isSaved",
	  "isPublic",
	  "stepTree"
      ]
    }
  ]
}
