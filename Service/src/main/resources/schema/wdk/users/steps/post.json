{
  "$schema": "http://json-schema.org/draft-04/schema",
    "type": "object",
    "properties": {
	"customName": {
	    "type": "string"
	},
	"isCollabsible": {
	    "type": "boolean"
	},
	"collapsedName": {
	    "type": "string"
	},
	"answerSpec": {
	    "type": "object",
	    "properties": {
		"questionName": {
		    "type": "string"
		},
		"parameters": {
		    "$ref": "../../includes/string-string-map.json"
		},
		"legacyFilterName": {
		    "type": "string"
		},
		"wdk_weight": {
		    "type": "integer"
		},
		"filters": {
		    "type": "array",
		    "items": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
			    "name": {
				"type": "string"
			    },
			    "value": {
				"type": "object"
			    }
			},
			"required": [
			    "name",
			    "value"
			]
		    }
		},
		"viewFilters": {
		    "type": "array",
		    "items": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
			    "name": {
				"type": "string"
			    },
			    "value": {
				"type": "object"
			    }
			},
			"required": [
			    "name",
			    "value"
			]
		    }
		},
		"required": [
		    "questionName",
		    "parameters"
		]
	    }
	}
    }
}
